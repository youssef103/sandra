{
  "name": "api",
  "version": "1.1.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "dev": "nodemon server & (cd client && npm start)",
    "release": "standard-version -- CI=true  --no-verify",
    "release:minor": "standard-version -- CI=true  --no-verify --release-as minor",
    "release:patch": "standard-version -- CI=true  --no-verify --release-as patch",
    "release:major": "standard-version -- CI=true  --no-verify --release-as major",
    "commit": "git-cz",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "publish:heroku": "git push heroku master"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-validator": "^6.4.1",
    "graphql": "^15.0.0",
    "graphql-yoga": "^1.18.3",
    "husky": "^4.2.5",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.11",
    "morgan": "^1.10.0",
    "standard-version": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-push": "CI=true yarn test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@ptsecurity/commitlint-config": "^1.0.0",
    "cz-conventional-changelog": "3.2.0",
    "nodemon": "^2.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}